<!--         </fileSet> -->
		<fileSet>
			<directory>user_data/curated_exps</directory>
			<includes>
				<include>*percnt/*</include>
			</includes>
			<outputDirectory>${assembly.output.folder}/user_data/curated_exps</outputDirectory>
		</fileSet>
        <fileSet>
            <directory>pme6_reanalysis_project</directory>
            <includes>
                <include>*.xml</include>
            </includes>
            <excludes>
            	<exclude>PME6_Re-analysis.xml</exclude>
            </excludes>
            <outputDirectory>${assembly.output.folder}/user_data/miape_data</outputDirectory>
        </fileSet>
		<fileSet>
            <directory>pme6_reanalysis_project</directory>
            <includes>
                <include>PME6_Re-analysis*.xml</include>
            </includes>
            <outputDirectory>${assembly.output.folder}/user_data/projects</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>metadata_templates</directory>
            <includes>
                <include>*.xml</include>
            </includes>
            <outputDirectory>${assembly.output.folder}/user_data/ms_metadata_templates</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>*.bat</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>README.txt</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>Batch_Import_*.txt</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        
    </fileSets>


    <dependencySets>
        <dependencySet>
            <outputDirectory>${assembly.output.folder}/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>